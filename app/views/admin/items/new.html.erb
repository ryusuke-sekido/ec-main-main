<h1>Admin::Items#new</h1>

<%= form_with model:@item, url: '/admin/items', method: :post do |f| %>
 <h1>商品新規登録</h1>
 <h2>商品名</h2>
 <%=f.text_field :name %>
 <h2>本文</h2>
 <%=f.text_area :body %>
 <h4>画像</h4>
 <%= f.file_field :image, accept: "image/*" %>
 <h4>価格</h4>
 <%=f.text_field :price %>

 <%=f.submit '登録' %>
<% end %>
