<h1>Admin::Items#edit</h1>

<%= form_with model:@item, url: admin_item_path(@item.id), method: :patch do |f| %>
<h1>商品編集</h1>
 <h2>商品名</h2>
 <%=f.text_field :name %>
 <h2>商品説明文</h2>
 <%=f.text_area :introduction %>
 <h2>画像</h2>
 <%=f.file_field :image %>
 <h4>価格</h4>
 <%=f.text_field :price %>円
 <%=f.submit '更新' %>
<% end %>

<%= link_to '商品一覧', admin_items_path %>
