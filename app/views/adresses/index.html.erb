<%= link_to '商品一覧', "/items" %>
<h1>配送先登録／一覧</h1>

<%= form_with model: @adress, url: '/adresses', method: :post do |f| %>
<h2>配送先登録</h2>
 <h3>郵便番号(ハイフンなし)</h3>
 　<%=f.text_field :postal_code %>
 <h3>住所</h3>
 　<%=f.text_area :address %>
 <h3>宛名</h3>
 　<%=f.text_area :name %>
 <%=f.submit '登録' %>
<% end %>

<h3>配送先一覧</h3>
<% @adresses.each do |adress| %>
 <p>・郵便番号:<%= adress.postal_code %> 住所:<%= adress.address %> 宛名:<%= adress.name %>
 <%= link_to "編集する", edit_adress_path(adress.id) %></p>
<% end %>

